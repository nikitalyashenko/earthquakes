  "main": "index.js",
  "private": true,
  "scripts": {
    "start": "ts-node-dev --respawn src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettier": "prettier --ignore-path .eslintignore \"./src/**/*.+(ts|json)\"",
    "check-format": "npm run prettier -- --list-different",
    "check-types": "tsc --noEmit",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/db/connection.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/db/connection.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/db/connection.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^3.13.0",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "joi": "^17.13.3",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "type-graphql": "2.0.0-rc.2",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20",
    "typeorm-typedi-extensions": "^0.4.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.11",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
